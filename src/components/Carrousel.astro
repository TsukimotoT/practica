---
// Carrousel.astro
---

<section
  class="relative w-full h-screen bg-cover bg-center"
  style="background-image: url('/public/images/home.webp');"
>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  <!-- Contenido del carrusel -->
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center
    justify-center h-full text-center"
  >
    <!-- Logo de la funeraria -->
    <img src="images/LOGO1.png" alt="Logo funeraria" class="mb-4" />
    <!-- Texto principal -->
    <h1 class="text-white text-3xl sm:text-4xl md:text-5xl font-semibold mb-8">
      Honramos la memoria de sus seres queridos <span class="italic"
        >Querido</span
      >
    </h1>
    <!-- Botones para versión de escritorio -->
    <div class="hidden md:flex space-x-4">
      <a
        href="/contacto"
        class="bg-teal-700 hover:bg-teal-600 text-white py-2 px-4 rounded transition duration-300"
      >
        Contacto
      </a>
      <a
        href="tel:+56931873669"
        class="bg-teal-700 hover:bg-teal-600 text-white py-2 px-4 rounded h transition duration-300"
      >
        Llamada de Emergencia
      </a>
      <a
        href="https://wa.me/message/ACWSWJULL5F4E1"
        class="bg-teal-700 hover:bg-teal-600 text-white py-2 px-4 rounded transition duration-300"
      >
        Solicitar Asesoría
      </a>
    </div>
    <!-- Botones para versión móvil -->
    <div class="md:hidden flex flex-col space-y-4">
      <a
        href="tel:+56931873669"
        class="bg-teal-700 hover:bg-teal-600 text-white py-2 px-4 rounded
        hover:bg-purple-700 transition duration-300"
      >
        Llamada de Emergencia
      </a>
      <a
        href="https://wa.me/message/ACWSWJULL5F4E1"
        class="bg-teal-700 hover:bg-teal-600 text-white py-2 px-4 rounded
        hover:bg-purple-700 transition duration-300"
      >
        Asesoría
      </a>
    </div>
  </div>
</section>
