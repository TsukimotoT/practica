<header class="">
  <nav id="navbar" class="bg-slate-200 shadow-md fixed top-0 w-full z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center space-x-2 ml-2">
          <a href="/">
            <img
              src="images/logo.png"
              alt="Funeraria Aurora"
              class="h-12 w-auto"
            />
          </a>
        </div>

        <!-- Navegación desktop -->
        <div class="hidden lg:flex flex-grow justify-around items-center">
          <a href="/" class="px-3 py-2 text-gray-800 hover:text-blue-500"
            >Inicio</a
          >
          <a
            href="/acerca-de"
            class="px-3 py-2 text-gray-800 hover:text-blue-500">Acerca de</a
          >

          <!-- Menú Planes (hover en desktop) -->
          <div class="relative group">
            <button
              id="planes-button"
              class="px-3 py-2 text-gray-800 hover:text-blue-500 focus:outline-none"
              aria-expanded="false"
              aria-haspopup="true"
            >
              Planes
            </button>
            <div
              class="absolute hidden group-hover:block bg-white border rounded shadow-lg mt-0 w-48"
              role="menu"
              aria-labelledby="planes-button"
            >
              <a
                href="/cuota-mortuoria-AFP"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
                >Cuota Mortuoria AFP</a
              >
              <a
                href="/cuota-mortuoria-IPS"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
                >Cuota Mortuoria IPS</a
              >
              <a
                href="/plan-classic"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
                >Plan Classic</a
              >
              <a
                href="/plan-platinum"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
                >Plan Platinum</a
              >
              <a
                href="/plan-elegance"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
                >Plan Elegance</a
              >
            </div>
          </div>

          <a
            href="/contacto"
            class="px-3 py-2 text-gray-800 hover:text-blue-500">Contacto</a
          >
        </div>

        <!-- Botón menú móvil -->
        <div class="-mr-2 flex items-center lg:hidden">
          <button
            type="button"
            id="mobile-menu-button"
            class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg
              class="h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Menú móvil -->
    <div id="mobile-menu" class="hidden lg:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a
          href="/"
          class="block px-3 py-2 text-base font-medium text-gray-800 hover:text-blue-500"
          >Inicio</a
        >

        <!-- Planes desplegable en móvil -->
        <div class="border-t border-gray-200">
          <button
            id="mobile-planes-button"
            class="block w-full text-left px-3 py-2 text-base font-medium text-gray-800 hover:text-blue-500 focus:outline-none"
            aria-expanded="false"
            aria-controls="mobile-planes-menu"
          >
            Planes
          </button>
          <div id="mobile-planes-menu" class="hidden px-2 space-y-1">
            <a
              href="/plan-platinum"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
              >Plan Platinum</a
            >
            <a
              href="/plan-elegance"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
              >Plan Elegance</a
            >
            <a
              href="/plan-classic"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
              >Plan Classic</a
            >
            <a
              href="/cuota-mortuoria-IPS"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
              >Cuota Mortuoria IPS</a
            >
            <a
              href="/cuota-mortuoria-AFP"
              class="block px-4 py-2 text-gray-800 hover:bg-gray-200"
              >Cuota Mortuoria AFP</a
            >
          </div>
        </div>

        <a
          href="/acerca-de"
          class="block px-3 py-2 text-base font-medium text-gray-800 hover:text-blue-500"
          >Acerca de</a
        >
        <a
          href="/contacto"
          class="block px-3 py-2 text-base font-medium text-gray-800 hover:text-blue-500"
          >Contacto</a
        >
      </div>
    </div>

    <!-- Script: sin errores "possibly null" -->
    <script type="module">
      // Obtiene nodos
      const mobilePlanesButton = document.querySelector(
        "#mobile-planes-button",
      );
      const mobilePlanesMenu = document.querySelector("#mobile-planes-menu");
      const mobileMenuButton = document.querySelector("#mobile-menu-button");
      const mobileMenu = document.querySelector("#mobile-menu");

      // Toggle del submenú "Planes" en móvil
      if (mobilePlanesButton && mobilePlanesMenu) {
        mobilePlanesButton.addEventListener("click", () => {
          mobilePlanesMenu.classList.toggle("hidden");
          const expanded = !mobilePlanesMenu.classList.contains("hidden");
          mobilePlanesButton.setAttribute("aria-expanded", String(expanded));
        });
      }

      // Toggle del menú móvil completo
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
          const expanded = !mobileMenu.classList.contains("hidden");
          mobileMenuButton.setAttribute("aria-expanded", String(expanded));
        });
      }
    </script>
  </nav>
</header>
